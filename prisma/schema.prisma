// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id        String   @id @default(cuid())
  name      String   @unique
  role      String   // 'admin', 'activator', 'specialist'
  createdAt DateTime @default(now())
  
  sales     Sale[]
  comments  Comment[]
  dailyStats DailyStat[]
  schedules Schedule[]
}

model Store {
  id               String    @id @default(cuid())
  name             String
  type             String
  activatorName    String?
  area             String?
  address          String?
  postCode         String?
  totalAcquisition Int?
  lat              Float?
  lng              Float?
  
  sales            Sale[]
  comments         Comment[]
}

model Sale {
  id        String   @id @default(cuid())
  userId    String
  storeId   String
  type      String   // 'P1' | 'P4'
  count     Int
  timestamp DateTime @default(now())

  user      User     @relation(fields: [userId], references: [name])
  store     Store    @relation(fields: [storeId], references: [id])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  storeId   String
  text      String
  timestamp DateTime @default(now())

  user      User     @relation(fields: [userId], references: [name])
  store     Store    @relation(fields: [storeId], references: [id])
}

model DailyStat {
  id            String   @id @default(cuid())
  date          String   // Format: DD/MM/YYYY
  userId        String
  acquisitionP1 Int      @default(0)
  acquisitionP4 Int      @default(0)
  offtakeP5     Int      @default(0)
  workingDays   Int      @default(0)

  user          User     @relation(fields: [userId], references: [name])

  @@unique([date, userId]) // Ensure one record per user per day
}

model Schedule {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  status    String   // 'Work', 'Off', 'Leave', 'Sick'
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [name])

  @@unique([userId, date])
}
